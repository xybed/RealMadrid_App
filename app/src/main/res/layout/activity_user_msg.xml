<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:background="@color/theme_color_white">
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/theme_height_a"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/bar_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/title_bar_text_center_color"
            android:textSize="@dimen/title_bar_text_center_size"/>

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/theme_margin_ten"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/title_bar_text_right_color"
            android:textSize="@dimen/title_bar_text_right_size"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/theme_margin_twenty"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/theme_margin_twenty"
                android:paddingLeft="@dimen/theme_padding_ten"
                android:paddingRight="@dimen/theme_padding_ten"
                android:background="@color/theme_color_white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:paddingRight="@dimen/theme_padding_ten"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_nick_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="昵称"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <EditText
                        android:id="@+id/edit_nick_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入昵称"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/theme_padding_five"
                        android:paddingRight="@dimen/theme_padding_twenty_five"
                        android:singleLine="true"
                        android:textColor="@color/theme_color_gray_c"
                        android:textColorHint="@color/theme_color_gray_b"
                        android:textSize="@dimen/theme_text_size_fourteen" />
                </LinearLayout>

                <include layout="@layout/layout_split_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_real_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="真实姓名"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <EditText
                        android:id="@+id/edit_real_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入真实姓名"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/theme_padding_five"
                        android:paddingRight="@dimen/theme_padding_twenty_five"
                        android:singleLine="true"
                        android:textColor="@color/theme_color_gray_c"
                        android:textColorHint="@color/theme_color_gray_b"
                        android:textSize="@dimen/theme_text_size_fourteen" />
                </LinearLayout>

                <include layout="@layout/layout_split_line_gray" />

                <LinearLayout
                    android:id="@+id/llay_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_sex"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="性别"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/theme_margin_ten"
                            android:text="男"
                            android:textColor="@color/theme_color_gray_c"
                            android:textSize="@dimen/theme_text_size_fourteen" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/layout_split_line_gray" />

                <LinearLayout
                    android:id="@+id/llay_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:background="@color/theme_color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_birthday"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="出生日期"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/theme_margin_ten"
                            android:text="2016-01-01"
                            android:textColor="@color/theme_color_gray_c"
                            android:textSize="@dimen/theme_text_size_fourteen" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/layout_split_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="email"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入email"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/theme_padding_five"
                        android:paddingRight="@dimen/theme_padding_twenty_five"
                        android:singleLine="true"
                        android:textColor="@color/theme_color_gray_c"
                        android:textColorHint="@color/theme_color_gray_b"
                        android:textSize="@dimen/theme_text_size_fourteen" />
                </LinearLayout>

                <include layout="@layout/layout_split_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/theme_height_a"
                    android:paddingLeft="@dimen/theme_padding_ten"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_msg_img_size"
                        android:layout_height="@dimen/user_msg_img_size"
                        android:src="@drawable/icon_city"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/theme_margin_ten"
                        android:text="城市"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_fourteen" />

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入城市"
                        android:paddingLeft="5dp"
                        android:paddingRight="25dp"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:textColor="@color/theme_color_gray_c"
                        android:textColorHint="@color/theme_color_gray_b"
                        android:textSize="@dimen/theme_text_size_fourteen"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
